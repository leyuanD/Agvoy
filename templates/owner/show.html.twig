{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block body %}
    <h1>Owner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Familyname</th>
                <td>{{ owner.familyname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ owner.firstname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ owner.address }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ owner.country }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(owner, 'imageFile') }}" width="80%"/></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('owner_index') }}">Back to List</a>
    <a class="btn btn-primary" href="{{ path('owner_edit', {'id': owner.id}) }}">Edit</a>

    {{ include('owner/_delete_form.html.twig') }}
{% endblock %}
