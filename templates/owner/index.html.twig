{% extends 'base.html.twig' %}

{% block title %}Owner index{% endblock %}
{% block head %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">{% endblock %}
{% block main %}
    <a class="btn btn-primary" href="{{ path('owner_new') }}">Create New Owner</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Familyname</th>
                <th>Firstname</th>
                <th>Address</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.familyname }}</td>
                <td>{{ owner.firstname }}</td>
                <td>{{ owner.address }}</td>
                <td>{{ owner.country }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('owner_show', {'id': owner.id}) }}">Show</a>
                    <a class="btn btn-info" href="{{ path('owner_edit', {'id': owner.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
